{
  "tslint.options": {
    "project": "tsconfig.json",
    "typeCheck": true
  },
  "rules": {
    "quotemark": [true, "single"],
    "semicolon": [true, "never"],
    "promise-function-async": true,
    "triple-equals": true,
    "no-var-keyword": true,
    "newline-before-return": true,
    "switch-final-break": true,
    "ordered-imports": [
      true,
      {
        "grouped-imports": true
      }
    ],
    "one-variable-per-declaration": true,
    "no-eval": true,
    "indent": [true, "spaces"],
    "class-name": true,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast"
    ]
  },
  "exclude": ["node_modules"]
}
